# NYC Uber/Lyft Data Chatbot - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git (it's in .gitignore)

# ============================================================================
# LLM Configuration (REQUIRED)
# ============================================================================

# LLM Provider: "groq" (API, recommended) or "ollama" (local)
# Default: groq (API - no local setup needed)
LLM_PROVIDER=groq

# Groq API Configuration (Required if using groq)
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant

# Ollama Configuration (Only needed if LLM_PROVIDER=ollama)
# Requires: Ollama installed and running locally
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama3:latest

# ============================================================================
# Security
# ============================================================================

# Cloudflare Turnstile (for bot protection)
# Demo keys for local testing: 1x00000000000000000000AA
TURNSTILE_SECRET_KEY=your_turnstile_secret_key_here

# ============================================================================
# Data Paths (usually don't need to change)
# ============================================================================

DATA_DIR=./data
TAXI_ZONE_LOOKUP=./data/taxi_zone_lookup.csv
BASE_LOOKUP=./data/fhv_base_lookup.csv
HVFHS_LOOKUP=./data/hvfhs_license_num_lookup.csv
CHART_DIR=./charts

# ============================================================================
# CORS (for production, set to your frontend domain)
# ============================================================================

CORS_ORIGINS=http://localhost

# ============================================================================
# Rate Limiting
# ============================================================================

RATE_LIMIT_PER_MINUTE=5
RATE_LIMIT_PER_DAY=50
GLOBAL_DAILY_CAP=1000

# ============================================================================
# Development
# ============================================================================

DEBUG=false
